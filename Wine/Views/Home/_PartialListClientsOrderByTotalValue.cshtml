@model IOrderedEnumerable<Wine.Client.Client>
@{
    ViewData["Title"] = "_PartialListClientsOrderByTotalValue";
    Layout = "_Layout";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Documento</th>
            <th scope="col">Nome</th>
            <th scope="col">Valor total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Document</td>
                <td>@client.Name</td>
                <td>@client.ShopHistory.Sum(sH => sH.TotalValue)</td>
            </tr>
        }
    </tbody>
</table>

